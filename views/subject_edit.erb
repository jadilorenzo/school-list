<h1>Update <%= @subject.title() %> </h1>

<form action="/subjects/<%= @subject.id() %>" method="post" class="form">
  <input name="_method" type="hidden" value="patch">
  <label for="title">Edit your subject:</label>
  <div class="form-group">
    <input id="title" name="title" class="form-control" type="text">
  </div>

  <label for="time">Edit your subject:</label>
  <div class="form-group">
    <input id="time" name="time" class="form-control" type="text">
  </div>

  <button type="submit" class='btn'>Update</button>
</form>
